<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_popup_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/_8sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_20sdp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/custom_alert_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="No Internet Connect"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_alert_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:lineSpacingExtra="1dp"
        android:text="Please turn mobile data on or connect to wifi to proceed."
        android:textAlignment="center"
        android:textColor="@color/colorBlack" />

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/custom_alert_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/rounded_corners_negative_button"
            android:text="CANCEL"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/custom_alert_btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/rounded_corners_positive_button"
            android:text="SETTINGS"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>