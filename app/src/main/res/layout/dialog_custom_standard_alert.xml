<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_popup_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/_8sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_20sdp">

    <ImageView
        android:id="@+id/custom_alert_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/custom_alert_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="No Internet Connection"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_alert_tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="Please turn mobile data on or connect to wifi to proceed."
        android:textAlignment="center"
        android:textColor="@color/colorBlack" />

    <Button
        android:id="@+id/custom_alert_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_positive_button"
        android:text="OK"
        android:textColor="@color/colorBlack" />

</LinearLayout>